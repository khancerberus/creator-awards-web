{
  "printWidth": 90,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "none",
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "plugins": ["prettier-plugin-tailwindcss", "@ianvs/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "printWidth": 79,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "semi": false,
        "tabWidth": 4,
        "useTabs": false
      }
    }
  ],
  "importOrder": [
    "<BUILTIN_MODULES>",
    "^react$",
    "^react-dom$",
    "^react-dom/client$",
    "^react-router-dom$",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/templates$",
    "^@/templates/(.*)$",
    "",
    "^@/pages$",
    "^@/pages/(.*)$",
    "",
    "^@/components/(.*)$",
    "^@/components/(.*)$",
    "",
    "^@/services$",
    "^@/services/(.*)$",
    "",
    "^@/(.*)$",
    "",
    "^(?!.*[.]css$)[./].*$",
    "^.css$"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "importOrderTypeScriptVersion": "5.2.2"
}
